{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["ES2022", "DOM"],
        "rootDir": "src",
        "outDir": "build",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowArbitraryExtensions": true,
        "allowSyntheticDefaultImports": true,
        "types": ["node"]
    },
    "include": ["src/**/*"],
    "exclude": ["build", "src/gui/renderer/**/*"]
}
